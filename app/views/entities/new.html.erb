<div class="custom-width">
  <%= form_with model: @entity, url: '/entities', method: :post, class: 'form' do |f| %>
      <div class="mb-3">
        <%= f.label :name, class: 'form-label pt-3' %>
        <%= f.text_field :name, :required => true, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= f.label :amount, class: 'form-label' %>
        <%= f.number_field :amount, :required => true, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= f.label 'Category:', class: 'form-label pb-1' %><br />
        <% for group in @group %>
          <%= check_box_tag "entity[group_ids][]", group.id, @entity.groups.include?(group), class: 'form-check-input' %>
          <%= f.label group.name, class: 'form-check-label' %><br />
        <% end %>
        <div class="form-text pb-3">Choose at least one category.</div>
      </div>
      <div class="bg-success d-flex justify-content-center">
        <%= f.submit "Add Transaction", class: 'btn btn-success px-4 py-2 m-4 border-white border-2 rounded-3 fs-3' %>
      </div>
  <% end %>
</div>